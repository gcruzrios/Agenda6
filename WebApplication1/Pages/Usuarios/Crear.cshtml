@page
@model Agenda6.Pages.Usuarios.CrearModel
@{
    ViewData["Title"] = "Crear nuevos Usuarios";
}

<div class="card">
    <div class="card-header">

        <h2 class="text-info">Crear un nuevo Usuario</h2>

    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container" style="padding:30px">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Usuario.NombreUsuario"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Usuario.NombreUsuario" class="form-control" />
                        </div>
                        <span asp-validation-for="Usuario.NombreUsuario" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Usuario.Password"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Usuario.Password" type="password" class="form-control" />
                        </div>
                        <span asp-validation-for="Usuario.Password" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Usuario.Role"></label>
                        </div>
                        <div class="col-sm-6">

                            <select asp-for="Usuario.Role" asp-items="@(new SelectList(Model.Roles, "Value", "Text"))" class="form-control">
                            </select>
                           
                        </div>
                        <span asp-validation-for="Usuario.Role" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-sm-2 offset-sm-2">
                            <input type="submit" value="Crear" class="btn btn-primary form-control" />
                        </div>
                        <div class="col-sm-4">
                            <a asp-page="Index" class="btn btn-info form-control">Volver a lista</a>
                        </div>

                    </div>
                </div>
            </div>
        </form>

    </div>
</div>