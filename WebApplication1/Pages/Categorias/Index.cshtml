@page
@model Agenda6.Pages.Categorias.IndexModel
@{
    ViewData["Title"] = "Lista de Categorias";
}


@if (Model.Mensaje != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.Mensaje
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-8">
                <h2 class="text-info">Lista de categorías</h2>
            </div>
            <div class="col-sm-4 mt-8  align-self-end">
                <a asp-page="Crear" class="btn btn-primary mt-4">Crear Nueva Categoría</a>
            </div>
        </div>

    </div>
    <div class="card-body">
        <form method="post">
            @if (Model.Categorias.Count() > 0)
            {
                <br />

                <br />
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>@Html.DisplayNameFor(m => m.Categorias.First().Id )</th>
                        <th>@Html.DisplayNameFor(m => m.Categorias.First().Nombre )</th>
                        <th>@Html.DisplayNameFor(m => m.Categorias.First().FechaCreacion )</th>
                        <th>Acciones</th>
                    </tr>
                    @foreach (var item in Model.Categorias)
                    {

                        <tr>
                            <td>@Html.DisplayFor(m => item.Id )</td>
                            <td>@Html.DisplayFor(m => item.Nombre )</td>
                           
                            <td>@Html.DisplayFor(m => item.FechaCreacion )</td>
                            <td>
                                <a asp-route-id="@item.Id" asp-page="Editar" class="btn btn-success btn-sm">Editar</a>
                                <button asp-page-handler="Borrar" asp-route-id="@item.Id" onclick="return confirm('Esta seguro de querer borrar la categoría?')" class="btn btn-danger">Borrar</button>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No hay Categorías disponibles</p>
            }
        </form>
    </div>
</div>
